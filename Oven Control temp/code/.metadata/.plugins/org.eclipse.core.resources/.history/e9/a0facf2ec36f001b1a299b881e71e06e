#ifndef MOTOR_H_
#define MOTOR_H_

#include "std_types.h"
#include "common_macros.h"
#include "micro_config.h"


/*******************************************************************************
 *                      Preprocessor Macros                                    *
 *******************************************************************************/
/* Motor HW Pins */
#define IN1 PB0
#define IN2 PB1
#define EN1 PB3
#define INT PD3

#define MOTOR_OUT_PORT PORTB
#define MOTOR_OUT_PORT_DIR DDRB
#define MOTOR_IN_PORT PORTD
#define MOTOR_IN_PORT_DIR DDRD



#endif /* MOTOR_H_ */
